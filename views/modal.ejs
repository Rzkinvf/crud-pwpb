<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
     <!-- Modal Tambah Barang-->
     <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/tambahbarang" method="post" enctype="multipart/form-data">
                        <input type="text" hidden id="id_jenisBarang" name="Id_JenisBarang" value="<%= idJ %>">
                        Nama Barang
                        <input type="text" id="Nama_barang" name="Nama_barang" onchange="Fungsi_Barang()" class="form-control">
                        Harga
                        <input type="text" id="harga" name="harga" onchange="Fungsi_Barang()" class="form-control">
                        Stock
                        <input type="text" id="stock" name="stock" class="form-control">
                        <div class="mb-3">
                            <label for="formFileSm" class="form-label">Small file input example</label>
                            <input class="form-control form-control-sm" id="formFileSm" type="file" name="photo">
                          </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="save" style="display: none;">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Tambah Transaksi -->
    <div class="modal fade" id="modalBarang" tabindex="-1" aria-labelledby="modalBarangLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modalBarangLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/tambahTransaksi" method="post">
                        <input type="text" name="barang_id" id="barang_id" hidden>
                        <input type="text" name="harga" id="harga" hidden>
                        <input type="text" name="total" id="total" hidden >
                        <input type="text" id="Stock" name="Stock " hidden>
                        <input type="text" id="new_stock" name="new_stock" hidden>
                        Masukan jumlah barang
                        <input type="text" name="jumlah" id="jumlah" class="form-control" onchange="multiFungsi()">


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Cancel Transaksi -->
    <div class="modal fade" id="modalCancel" tabindex="-1" aria-labelledby="modalCancelLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modalCancelLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/cancelTransaksi" method="post">
                        <input type="text" name="id_transaksi" id="id_transaksi" hidden>
                        <input type="text" name="barang_id2" id="barang_id2" hidden>
                        <input type="text" name="stockBaru" id="stockBaru" hidden>
                       <h1>Apakah Anda Yakin ingin mencancel </h1>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Edit Barang-->
    <div class="modal fade" id="modalEdit" tabindex="-1" aria-labelledby="modalEditBarang" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modalEditBarang">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/editBarang" method="post">
                        <input type="text" id="id_Ebarang" name="id_Ebarang" hidden>
                        Nama Barang
                        <input type="text" id="nama_Ebarang" name="nama_Ebarang"  class="form-control">
                        Harga
                        <input type="text" id="harga_Ebarang" name="harga_Ebarang" class="form-control">
                    </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Bayar Transaksi -->
    <div class="modal fade" id="modalBayar" tabindex="-1" aria-labelledby="modalBayarTransaksi" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modalBayarTransaksi">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/bayar" method="post">
                        <h3 id="info"></h3>
                        <input type="text" id="u_saldo" name="u_saldo" hidden>
                        <input type="text" id="B_id_barang" name="B_id_barang"  class="form-control" hidden>
                        <input type="text" id="B_id_transaksi" name="B_id_transaksi" class="form-control" hidden>
                        <input type="text" id="BT_harga" name="BT_harga" class="form-control" hidden>
                        <input type="text" id="B_stock" name="B_stock" class="form-control" >

                    </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>